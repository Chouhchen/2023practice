int my_power(double base, int exponent) // decline and define
{
    
    double result =1;
    for(int i = 0; i < exponent; i++)
    {
        result = result * base;
    }
    return result;
}


int main() {
    double a, b;
    cout << "What is the base?" << '\n';
    cin >> a;
    cout << "What is the exponent?" << '\n';
    cin >> b;
    double power = my_power(a, b);
    cout << power << '\n';
    return 0;
    
}

